<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.PlaySong">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botton_menu">
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/botton_menu"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <app.lslibrary.customUI.LSCircleImage
            android:id="@+id/btn_pre"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            app:CircleImage_img="@drawable/the_previous_step"
            app:CircleImage_radius="30dp"
            app:layout_constraintRight_toLeftOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="parent" />


        <app.lslibrary.customUI.LSCircleImage
            android:id="@+id/btn_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:CircleImage_img="@drawable/video"
            app:CircleImage_radius="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <app.lslibrary.customUI.LSCircleImage
            android:id="@+id/btn_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            app:CircleImage_img="@drawable/the_next_step"
            app:CircleImage_radius="30dp"
            app:layout_constraintLeft_toRightOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
    
</android.support.constraint.ConstraintLayout>